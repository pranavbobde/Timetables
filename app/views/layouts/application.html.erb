<!DOCTYPE html>
<html>
  <head>
    <title>Timetable</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <div class="container">
      <div class="row">
        
      <p>Signed in as... <%= current_user.email %></p>
      (<%= link_to 'Sign out', destroy_user_session_path,:method => :delete%>)
     
      
      <% else %>
      <%= link_to'Register', new_user_registration_path %> or
      <%= link_to'Sign in', new_user_session_path %>
      </div>
      
      
      
       <!--<%= check_box"Admin Login", @au  %> -->
      
      
     <% end %>
     <div class="row">
     <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="<%=root_path%>">NCIRL Timetable</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="<%=root_path%>">Home</a></li>
            <li><a href="<%=rooms_path%>">Room</a></li>
            <li><a href="<%=faculties_path%>">Faculty</a></li>
            <li><a href="<%=courses_path%>">Course</a></li>
            <li><a href="<%=subjects_path%>">Subjects</a></li>
            <li><a href="<%=bookings_path%>">Booking</a></li>
            <li><a href="<%=search_index_path%>">Search</a></li>
            <li><a href="<%=users_path%>">Profile</a></li>
          </ul>
        </div>
      </nav>
      </div>
  
    <%=yield %>
        </div>

  </body>
</html>
